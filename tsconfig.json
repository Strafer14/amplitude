{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "es6",
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "target": "es6",
    "sourceMap": true
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules"
  ]
}
